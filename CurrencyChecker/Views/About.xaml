<Page
    x:Class="CurrencyChecker.Views.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CurrencyChecker.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0,0,0,200">
            <TextBlock Text="About" TextWrapping="Wrap" FontSize="48" FontFamily="Lato" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,100"/>
            <TextBlock Text="Denis Olek" TextWrapping="Wrap" FontSize="36" FontFamily="Lato" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" Text="denis.olek@gmail.com" VerticalAlignment="Top" FontSize="18" HorizontalAlignment="Center" Margin="0"/>
            <Button Content="BACK" Height="45" Width="180" Click="Navigate_Back" HorizontalAlignment="Center" Margin="0,32,0,0"/>
        </StackPanel>
    </Grid>
</Page>
